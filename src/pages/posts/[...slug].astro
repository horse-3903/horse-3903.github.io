---
import path from "node:path";
import CusdisComments from "@components/Comments.astro";
import License from "@components/misc/License.astro";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts } from "@utils/content-utils";
import { getDir, getPostUrlBySlug } from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import { licenseConfig } from "src/config";
import ImageWrapper from "../../components/misc/ImageWrapper.astro";
import PostMetadata from "../../components/PostMeta.astro";
import { accessConfig, profileConfig, siteConfig } from "../../config";
import { formatDateToYYYYMMDD } from "../../utils/date-utils";

export async function getStaticPaths() {
	const blogEntries = await getSortedPosts();
	return blogEntries.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

const { remarkPluginFrontmatter } = await entry.render();
const requiresAccessCode =
	accessConfig.enabled && entry.data.access === "restricted";

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: entry.data.title,
	description: entry.data.description || entry.data.title,
	keywords: entry.data.tags,
	author: {
		"@type": "Person",
		name: profileConfig.name,
		url: Astro.site,
	},
	datePublished: formatDateToYYYYMMDD(entry.data.published),
	inLanguage: entry.data.lang
		? entry.data.lang.replace("_", "-")
		: siteConfig.lang.replace("_", "-"),
	// TODO include cover image here
};
---
<MainGridLayout banner={entry.data.image} title={entry.data.title} description={entry.data.description} lang={entry.data.lang} setOGTypeArticle={true} headings={headings}>
    <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative mb-4">
        <div id="post-container" class:list={["card-base z-10 px-6 md:px-9 pt-6 pb-4 relative w-full ",
            {}
        ]}>
            <!-- word count and reading time -->
            <div class="flex flex-row text-black/30 dark:text-white/30 gap-5 mb-3 transition onload-animation">
                <div class="flex flex-row items-center">
                    <div class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2">
                        <Icon name="material-symbols:notes-rounded"></Icon>
                    </div>
                    <div class="text-sm">{remarkPluginFrontmatter.words} {" " + i18n(I18nKey.wordsCount)}</div>
                </div>
                <div class="flex flex-row items-center">
                    <div class="transition h-6 w-6 rounded-md bg-black/5 dark:bg-white/10 text-black/50 dark:text-white/50 flex items-center justify-center mr-2">
                        <Icon name="material-symbols:schedule-outline-rounded"></Icon>
                    </div>
                    <div class="text-sm">
                        {remarkPluginFrontmatter.minutes} {" " + i18n(remarkPluginFrontmatter.minutes === 1 ? I18nKey.minuteCount : I18nKey.minutesCount)}
                    </div>
                </div>
            </div>

            <!-- title -->
            <div class="relative onload-animation">
                <div
                    data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title"
                    class="transition w-full block font-bold mb-3
                    text-3xl md:text-[2.25rem]/[2.75rem]
                    text-black/90 dark:text-white/90
                    md:before:w-1 before:h-5 before:rounded-md before:bg-[var(--primary)]
                    before:absolute before:top-[0.75rem] before:left-[-1.125rem]
                ">
                    {entry.data.title}
                </div>
            </div>

            <!-- metadata -->
            <div class="onload-animation">
                <PostMetadata
                        class="mb-5"
                        published={entry.data.published}
                        updated={entry.data.updated}
                        tags={entry.data.tags}
                        category={entry.data.category}
                ></PostMetadata>
                {!entry.data.image && <div class="border-[var(--line-divider)] border-dashed border-b-[1px] mb-5"></div>}
            </div>

            <!-- always show cover as long as it has one -->

            {entry.data.image &&
                <ImageWrapper id="post-cover" src={entry.data.image} basePath={path.join("content/posts/", getDir(entry.id))} class="mb-8 rounded-xl banner-container onload-animation"/>
            }


            {requiresAccessCode && (
                <div id="access-gate" data-access-required="true" class="card-base mb-6 p-5 md:p-6 rounded-2xl border border-black/10 dark:border-white/10 relative overflow-hidden">
                    <div class="absolute inset-0 pointer-events-none bg-gradient-to-br from-black/[0.04] via-transparent to-black/[0.06] dark:from-white/[0.06] dark:to-white/[0.02]"></div>
                    <div class="relative">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="h-9 w-9 rounded-xl bg-black/5 dark:bg-white/10 text-black/70 dark:text-white/80 flex items-center justify-center">
                                <Icon name="material-symbols:lock"></Icon>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-black/90 dark:text-white/90">Protected post</div>
                                <div class="text-xs text-black/50 dark:text-white/50">Access required</div>
                            </div>
                        </div>
                        <div class="text-sm text-black/60 dark:text-white/60 mb-4 max-w-2xl">
                            Enter the access code once to unlock all protected posts on this device.
                        </div>
                        <div class="flex flex-col md:flex-row gap-3 items-start md:items-center">
                            <div class="flex-1 w-full md:max-w-sm">
                                <input id="access-code-input" type="password" inputmode="text" autocomplete="off"
                                    class="w-full px-3 py-2.5 rounded-lg border border-black/10 dark:border-white/10 bg-white/80 dark:bg-white/5 text-black/90 dark:text-white/90 placeholder:text-black/40 dark:placeholder:text-white/40 focus:outline-none focus:ring-2 focus:ring-[var(--primary)]/30"
                                    placeholder="Access code" />
                            </div>
                            <button id="access-code-submit" class="btn-regular px-5 py-2.5 rounded-lg flex items-center gap-2 text-black/90 dark:text-white/90">
                                <Icon name="material-symbols:lock-open"></Icon>
                                Unlock
                            </button>
                        </div>
                        <div id="access-code-error" class="text-sm text-red-600 dark:text-red-400 mt-3 hidden" aria-live="polite">
                            Incorrect code. Try again.
                        </div>
                    </div>
                </div>
            )}

            <div id="protected-content" class:list={["mb-6", {"hidden": requiresAccessCode}]}>
                <Markdown class="markdown-content onload-animation">
                    <Content />
                </Markdown>
            </div>

            {licenseConfig.enable && <License title={entry.data.title} slug={entry.slug} pubDate={entry.data.published} class="mb-6 rounded-xl license-container onload-animation"></License>}

        </div>
    </div>

    <CusdisComments
        pageId={Astro.url.pathname}
        pageUrl={`https://horse-3903.github.io${Astro.url.pathname}`}
        pageTitle={entry.data.title}
    />

    <div class="flex flex-col md:flex-row justify-between mb-4 gap-4">
        <a href={entry.data.nextSlug ? getPostUrlBySlug(entry.data.nextSlug) : "#"}
            class:list={["font-bold overflow-hidden active:scale-95", {"pointer-events-none": !entry.data.nextSlug}]}>
            {entry.data.nextSlug && (
            <div class="btn-card rounded-2xl h-[3.75rem] px-6 flex items-center justify-start gap-3 w-auto max-w-full">
                <Icon name="material-symbols:chevron-left-rounded" class="text-[2rem] text-[var(--primary)]" />
                <div class="overflow-hidden text-ellipsis whitespace-nowrap text-black/75 dark:text-white/75">
                {entry.data.nextTitle}
                </div>
            </div>
            )}
        </a>

        <a href={entry.data.prevSlug ? getPostUrlBySlug(entry.data.prevSlug) : "#"}
            class:list={["font-bold overflow-hidden active:scale-95", {"pointer-events-none": !entry.data.prevSlug}]}>
            {entry.data.prevSlug && (
            <div class="btn-card rounded-2xl h-[3.75rem] px-6 flex items-center justify-end gap-3 w-auto max-w-full">
                <div class="overflow-hidden text-ellipsis whitespace-nowrap text-black/75 dark:text-white/75">
                {entry.data.prevTitle}
                </div>
                <Icon name="material-symbols:chevron-right-rounded" class="text-[2rem] text-[var(--primary)]" />
            </div>
            )}
        </a>
    </div>
    <script
        is:inline
        define:vars={{
            accessCodeHash: accessConfig.codeHash,
            storageKey: accessConfig.storageKey,
        }}
    >
        const initAccessGate = () => {
            const gate = document.getElementById("access-gate");
            const content = document.getElementById("protected-content");
            const input = document.getElementById("access-code-input");
            const button = document.getElementById("access-code-submit");
            const error = document.getElementById("access-code-error");

            if (!gate || !content || !input || !button) {
                return;
            }

            const unlock = () => {
                gate?.classList.add("hidden");
                content?.classList.remove("hidden");
                document.documentElement.classList.add("access-unlocked");
            };

            if (localStorage.getItem(storageKey) === "true") {
                unlock();
            }

            const toHex = (buffer) => {
                const bytes = new Uint8Array(buffer);
                return Array.from(bytes)
                    .map((b) => b.toString(16).padStart(2, "0"))
                    .join("");
            };

            const hashText = async (text) => {
                const data = new TextEncoder().encode(text);
                const digest = await crypto.subtle.digest("SHA-256", data);
                return toHex(digest);
            };

            const tryUnlock = async () => {
                if (!input) return;
                const value = input.value.trim();
                if (value) {
                    const hash = await hashText(value);
                    if (hash === accessCodeHash) {
                        localStorage.setItem(storageKey, "true");
                        unlock();
                        return;
                    }
                }
                error?.classList.remove("hidden");
            };

            const disableWhile = async (fn) => {
                button.disabled = true;
                button.classList.add("opacity-70", "pointer-events-none");
                try {
                    await fn();
                } finally {
                    button.disabled = false;
                    button.classList.remove("opacity-70", "pointer-events-none");
                }
            };

            const onSubmit = () => disableWhile(tryUnlock);

            button.addEventListener("click", onSubmit);
            input.addEventListener("keydown", (event) => {
                if (event.key === "Enter") onSubmit();
            });
            input.addEventListener("input", () => {
                error?.classList.add("hidden");
            });
        };

        initAccessGate();
        if (window?.swup?.hooks) {
            window.swup.hooks.on("content:replace", initAccessGate);
            window.swup.hooks.on("page:view", initAccessGate);
        }
    </script>
</MainGridLayout>
